<div>
    <h2>
        <%= link_to "#{post.title}", user_post_path(@user.id, post.id) %>
    </h2>
    <p>
        <%= post.text %>
    </p>
    <div>
        <small>
            <%= "comments: #{post.comments_counter}" %>
        </small>
        <small>
            <%= "Likes: #{post.likes_counter}" %>
        </small>
    </div>
</div>